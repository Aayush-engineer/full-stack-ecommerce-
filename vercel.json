{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/products", "dest": "/index.html" },
    { "src": "/products/(.*)", "dest": "/index.html" },
    { "src": "/categories", "dest": "/index.html" },
    { "src": "/categories/(.*)", "dest": "/index.html" },
    { "src": "/brands", "dest": "/index.html" },
    { "src": "/brands/(.*)", "dest": "/index.html" },
    { "src": "/users", "dest": "/index.html" },
    { "src": "/users/(.*)", "dest": "/index.html" },
    { "src": "/auth", "dest": "/index.html" },
    { "src": "/auth/(.*)", "dest": "/index.html" },
    { "src": "/cart", "dest": "/index.html" },
    { "src": "/cart/(.*)", "dest": "/index.html" },
    { "src": "/orders", "dest": "/index.html" },
    { "src": "/orders/(.*)", "dest": "/index.html" },
    { "src": "/webhook", "dest": "/index.html" },
    { "src": "/create-payment-intent", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

